<%= tag.div({class: 'text-center'}) do %>
  <%= tag.u do %>
    <%= tag.h1 @post.title.titleize %>
  <% end %>
<% end %>
<%= tag.div({class: 'text-center'}) do %>
  <%= tag.i do %>
    Written by <%= @post.user.full_name %> on <%= @post.created_at.to_formatted_s(:long) %>
  <% end %>
<% end %>
<%= tag.div({class: 'text-center'}) do %>
  <%= tag.i do %>
    Last update made <%= @post.updated_at.to_formatted_s(:long) %>
  <% end %>
<% end %>
<% if current_user.id == @post.user_id %>
  <%= tag.div({class: 'author-section text-center'}) do %>
    <%= button_to 'Edit Post', edit_post_path(@post.id), method: "get", class: 'btn btn-primary btn-sm' %>
    <%= button_to 'Delete Post', post_path(@post.id), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure?'} %>
  <% end %>
<% end %>
<%= tag.div({class: 'post-content'}) do %>
  <%= @post.content %>
<% end %>
<%= tag.div({class: 'post-categories'}) do %>
  <% unless @post.categories.count.zero? %>
    Categories: 
    <%= tag.div({style: 'margin-left: 25px;'}) do %>
      <% @post.categories.each do |category| %>
        <%= tag.button category.name, {class: 'btn btn-light btn-sm', disabled: true} %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= tag.div({class: 'post-comments'}) do %>
  <%= tag.hr %>
  <%= tag.div '', {id: 'disqus_thread'} %>
  <%= javascript_tag({type: 'text/javascript'}) do %>
    /*
    var disqus_config = function () {
      this.page.url = '<%= request.original_url %>';  // Replace PAGE_URL with your page's canonical URL variable
      this.page.identifier = "PostShow<%= @post.id %>"; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
    };
    */
    (function() { // DON'T EDIT BELOW THIS LINE
      var d = document, s = d.createElement('script');
      s.src = 'https://colyer-me.disqus.com/embed.js';
      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
    })();
  <% end %>
  <%= tag.noscript do %>
    Please enable JavaScript to view the
    <%= tag.a 'comments powered by Disqus.', {href: 'https://disqus.com/?ref_noscript'} %>
  <% end %>
<% end %>
