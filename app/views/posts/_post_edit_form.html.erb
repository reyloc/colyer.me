<%= tag.div do %>
  <%= form_with scope: :update, url: posts_path do |f| %>
    <%= tag.div({class: 'form-group'}) do %>
      <%= f.label :title %>
      <%= f.text_field :title, {class: 'form-control', placeholder: 'The title of your post'} %>
    <% end %>
    <%= tag.div({class: 'form-group'}) do %>
      <%= tag.label 'Content', {for: 'post_content'} %>
      <%= tag.textarea @post.post_contents.pluck(:content).join(' '), {id: 'post_content', name: 'post[content]', class: 'form-control', rows: 10, placeholder: 'Your post content'} %>
    <% end %>
    <%= tag.div({class: 'form-group'}) do %>
      <%= f.label :keywords %>
      <%= f.text_field :keywords, {class: 'form-control', placeholder: 'Categories will be auto-added'} %>
    <% end %>
    <%= tag.div({class: 'form-group'}) do %>
      <%= f.label :description %>
      <%= f.text_field :description, {class: 'form-control', placeholder: 'Description for meta data'} %>
    <% end %>
    <%= tag.div({class: 'form-group'}) do %>
      <%= f.label :categories %>
      <%= f.select :categories, Category.all.pluck(:name, :id), {}, {class: 'selectize', autocomplete: 'off', multiple: true} %>
    <% end %>
    <%= tag.div({class: 'form-group text-center'}) do %>
      <%= tag.div({class: 'form-check'}) do %>
        <%= f.check_box :public, {class: 'form-check-input'}, 1, 0 %>
        <%= f.label :public, 'Public?', {class: 'form-check-label', title: 'Can your post be seen by the public?'} %>
      <% end %>
    <% end %>
    <%= tag.div({class: 'text-center form-group'}) do %>
      <%= f.submit 'Edit', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
<% end %>
