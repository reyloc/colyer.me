<%= tag.div do %>
  <%= form_with(model: @category) do |f| %>
    <%= tag.div({class: 'form-group'}) do %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    <% end %>
    <%= tag.div({class: 'form-group'}) do %>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    <% end %>
    <%= tag.div({class: 'form-group text-center'}) do %>
      <%= f.submit "#{action_name.titleize} #{controller.controller_name.titleize.singularize}", class: 'btn btn-primary' %>
    <% end %>
  <% end %>
<% end %>
