<%= tag.div({class: 'text-center'}) do %>
  <%= tag.h1 'Categories' %>
<% end %>
<%= tag.div do %>
  <%= tag.ul do %>
    <% @cats.each do |cat| %>
      <% if cat.posts.count > 0 %>
        <%= tag.li do %>
          <%= link_to(category_path(cat.id)) do %>
            <%= cat.name %> (<%= pluralize(cat.posts.count, 'post') %>)
          <% end %>
          <%= tag.i cat.description %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
